<section class="row columns is-multiline">
  {{#each shows}}
  <div class="column is-4">
    <div class="card">
      {{#if image}}
      <a href="/show/{{_id}}">
        <div class="card-image">
          <figure class="image">
            <img src="{{image}}" alt="Show Image" style="object-fit: cover; height:400px">
          </figure>
        </div>
      </a>
      {{/if}}
      <div class="card-content">
        <div class="media">
          <div class="media-content">
            <p class="title is-4">{{title}}</p>
            <p class="subtitle is-6">{{dateAdded}}</p>
          </div>
        </div>

        <footer>
          <a href="/show/{{_id}}" class="button">
            <span class="icon is-small">
              <i class="fas fa-eye"></i>
            </span>
          </a>
          <a href="/dashboard/deleteshow/{{_id}}" class="button">
            <i class="fas fa-trash"></i>
          </a>
        </footer>
      </div>
    </div>
  </div>
  {{/each}}
</section>