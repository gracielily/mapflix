<section class="row columns is-multiline">
  {{#each shows}}
  <div class="column is-3">
    <div class="card">
      <a href="/show/{{_id}}">
        <div class="card-image">
          <figure class="image">
            <img src="{{#if image }}{{image}}{{else}}/img/placeholder-image.jpg{{/if}}" alt="Show Image"
              style="object-fit: cover; height:280px">
          </figure>
        </div>
      </a>
      <div class="card-content">
            <p class="title is-4">{{title}}</p> 
      </div>
        <div class="card-footer">
          <p class="is-6" style="margin-top:6px;margin-right:15px;color:purple"><span class="icon"><i class="fas fa-map-marker-alt"></i></span><span>{{points.length}}</span></p>
          <a href="/show/{{_id}}" class="button">
            <span class="icon">
              <i class="fas fa-eye"></i>
            </span><span>View</span>
          </a>
          <a href="/dashboard/deleteshow/{{_id}}" class="button">
            <span class="icon"><i class="fas fa-trash"></i></span>
            <span>Delete</span>
          </a>
        </div>
      </div>
    </div>
  {{/each}}
</section>