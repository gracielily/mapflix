<label class="label">Name</label>
<div class="field is-horizontal">
    <div class="field-body">
        <div class="field">
            <div class="control has-icons-left">
                <input class="input" type="text" placeholder="First Name" name="firstName" value="{{values.firstName}}" minlength="1" maxlength="50"/>
                <span class="icon is-small is-left">
                    <i class="fa fa-id-card"></i>
                </span>
            </div>
        </div>
        <div class="field">
            <div class="control has-icons-left">
                <input class="input" type="text" placeholder="Last Name" name="lastName" value="{{values.lastName}}" minlength="1" maxlength="50"/>
                <span class="icon is-small is-left">
                    <i class="fa fa-id-card"></i>
                </span>
            </div>
        </div>
    </div>
</div>