<table class="table is-fullwidth mt-6">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Movie</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each favoritePoints}}
    <tr data-cy="favorite-point">
      <td>
        <figure class="image point-image">
          <img src="{{#if images}}{{images.[0]}}{{else}}/img/placeholder-image.jpg{{/if}}">
        </figure>
      </td>
      <td>
        {{name}}
      </td>
        <td>{{show.title}}</td>
      <td>
        <a href="/show/{{show._id}}/point/{{_id}}" class="ui icon button" data-cy="view-fav-point">
          <i class="fas fa-eye"></i>
        </a>
        <a href="/show/{{show._id}}/point/{{_id}}/remove-from-favorites" class="ui icon button is-danger" data-cy="delete-fav-point">
          <i class="fas fa-heart-circle-xmark"></i>
        </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>