{{> errormsg }}
<form action="/show/{{show._id}}/addpoint" method="POST" id="createPointForm">
    <div class="field">
      <label class="label">Name</label>
      <input class="input" type="text" placeholder="Name" 
      name="name" value="{{values.name}}"/>
    </div>
    <label class="label">Location</label>
    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field">
          <input class="input" type="text" name="latitude" 
          min="-85" max="85" placeholder="00.00" step=".000000000000001"
          value="{{values.latitude}}"/>
        </div>
        <div class="field">
          <input class="input" type="text" name="longitude" min="-180" max="180" placeholder="00.00" step=".000000000000001"/>
        </div>
      </div>
    </div>
    <div class="field is-grouped">
      <button class="button is-link">Add Point</button>
    </div>
</form>
