{{> menu }}
<h1>Account Details for {{ user.firstName }} {{ user.lastName }}</h1>
{{#if user.avatar}}
<section>
    <figure class="image is-128x128">
        <img class="is-rounded" src={{user.avatar}} style="width: 128px; height: 128px; object-fit: cover">
    </figure>
    <a href="/account/deleteavatar">
        <button class="button is-link is-danger">
            <span class="icon"><i class="fas fa-trash"></i></span><span>Remove Avatar</span>
        </button>
    </a>
</section>
{{/if}}
<section class="section">
    <form action="/account/uploadavatar" method="POST" enctype="multipart/form-data">
        <div id="file-select" class="file has-name is-fullwidth">
            <label class="file-label"> <input class="file-input" name="imagefile" type="file" name="resume"
                    accept="image/png, image/jpeg">
                <span class="file-cta">
                    <span class="file-icon">
                        <i class="fas fa-upload"></i>
                    </span>
                    <span class="file-label">
                        Choose a fileâ€¦
                    </span>
                </span>
                <span class="file-name"></span>
            </label>
            <button type="submit" class="button is-info">Upload</button>
        </div>
    </form>

    {{> account-form }}
</section>
<script>
    const fileInput = document.querySelector(".file-input");
    fileInput.onchange = () => {
        if (fileInput.files.length > 0) {
            const fileName = document.querySelector(".file-name");
            fileName.textContent = fileInput.files[0].name;
        }
    };
</script>