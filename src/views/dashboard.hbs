<section class="hero is-link is-small mt-6">
    <div class="hero-body">
        <div class="container">
            <h1 class="title has-text-centered">
                Dashboard
            </h1>
        </div>
    </div>
</section>

<section class="dashboard mt-6 pb-6">
    {{#if shows}}
        {{> search-shows }}
        {{> list-shows }}
    {{else}}
        {{#if noShowsMessage}}
            {{> search-shows }}
            {{> message title="No Search Results" message=noShowsMessage}}
        {{else}}
            {{> message title="No Movies" message="You currently have no movies, you can create one by using the form below."}}
        {{/if}}
    {{/if}}
    {{> add-show }}
</section>