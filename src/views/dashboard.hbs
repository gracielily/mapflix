<style>
.card {
   display: flex;
   flex-direction: column;
   height: 100%;
}

.card-footer {
   margin-top: auto;
   width:100%;
   display: flex;
   gap: 6px;
   flex-direction: row;
   justify-content: flex-start;
   padding:6px
}
</style>
{{> menu }}
<section class="section">
    <h1>Welcome to MapFlix</h1>
    <section class="section">
        {{#if shows}}
            <a class="button is-danger" href="/dashboard/deleteallshows">
                Delete All Shows
            </a>
            {{> search-shows }}
            {{> list-shows }}
        {{else}}
            {{#if noShowsMessage}}
                <p>{{noShowsMessage}}</p>
                {{> search-shows }}
            {{else}}
                <p>You have no shows. Add one using the form below.</p>
            {{/if}}
        {{/if}}
        {{> add-show }}
    </section>
</section>